# Configurações de Segurança - BarberConnect
# Copie este arquivo para .env e preencha com valores reais

# Flask Secret Key (gere uma chave forte: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET=seu_secret_key_aqui_gere_um_forte

# Modo de Debug (NUNCA use True em produção!)
FLASK_DEBUG=False

# Database
DATABASE_URL=sqlite:///meubanco.db

# Configurações de Sessão
SESSION_LIFETIME=3600  # 1 hora em segundos

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900  # 15 minutos em segundos

# Upload de Arquivos
MAX_FILE_SIZE=5  # MB
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp

# Email (para futuras notificações)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=seu_email@gmail.com
# MAIL_PASSWORD=sua_senha_app

# Logs de Auditoria
AUDIT_LOG_FILE=logs/audit.log
ERROR_LOG_FILE=logs/error.log
